<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/specializationDocsCard"
    android:layout_width="350dp"
    android:layout_height="120dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="16dp"
    android:elevation="8dp"
    android:layout_gravity="center"
    android:backgroundTint="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/specRecyclTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr Name"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.055"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.164" />

        <TextView
            android:id="@+id/phoneNumRecyclTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Phone Number"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/specRecyclTxt"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/specRecyclTxt"
            app:layout_constraintTop_toBottomOf="@+id/specRecyclTxt" />

        <TextView
            android:id="@+id/addressRecyclrTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Address"
            android:textSize="10sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@+id/phoneNumRecyclTxt"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/phoneNumRecyclTxt"
            app:layout_constraintTop_toBottomOf="@+id/phoneNumRecyclTxt" />

        <Button
            android:id="@+id/bookRecyclrBtn"
            style="@style/CustomButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:backgroundTint="@color/yellow"
            android:elevation="5dp"
            android:text="Book now"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.897"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="@color/icy" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>