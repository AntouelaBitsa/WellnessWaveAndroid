<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logoImgView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="256dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_logo_transparent_foreground" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/enterBtn"
        style="@style/Widget.Material3.ExtendedFloatingActionButton.Primary"
        android:layout_width="130dp"
        android:layout_height="57dp"
        android:elevation="25dp"
        android:shadowColor="@color/black"
        android:text="Enter"
        android:textAlignment="center"
        android:textColor="@color/grass"
        android:textSize="20sp"
        app:backgroundTint="@color/smokedlinen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoImgView1"
        app:layout_constraintVertical_bias="0.051"
        app:rippleColor="@color/grass" />

</androidx.constraintlayout.widget.ConstraintLayout>