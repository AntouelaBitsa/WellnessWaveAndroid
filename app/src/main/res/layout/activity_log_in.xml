<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LogInActivity">

    <ImageView
        android:id="@+id/logInRightLogoImgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="277dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_logo_transparent_round" />

    <TextView
        android:id="@+id/greetingTxt"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="94dp"
        android:text="Helllo Again \n We’re happy to see you again "
        android:textAlignment="center"
        android:textColor="@color/darkgrass"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="PLEASE ENTER YOUR :"
        android:textColor="@color/darkgrass"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greetingTxt" />

    <ImageView
        android:id="@+id/userImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/user_outline_30dp" />

    <com.google.android.material.textfield.MaterialAutoCompleteTextView
        android:id="@+id/usernameEdtTxt"
        style="@style/Widget.Material3.TextInputEditText.FilledBox"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:ems="13"
        android:hint="Username"
        android:inputType="text"
        android:textColorHint="@color/grass"
        android:background="@drawable/rounded_edit_text_background_smokedmilky"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toEndOf="@+id/userImg"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/passwordImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userImg"
        app:srcCompat="@drawable/password_outlined_30dp" />

    <com.google.android.material.textfield.MaterialAutoCompleteTextView
        android:id="@+id/passwordEdtTxt"
        style="@style/Widget.Material3.TextInputEditText.FilledBox"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_edit_text_background_smokedmilky"
        android:elevation="10dp"
        android:ems="13"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/grass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toEndOf="@+id/passwordImg"
        app:layout_constraintTop_toBottomOf="@+id/usernameEdtTxt" />

    <Button
        android:id="@+id/logInBtn"
        style="@style/Widget.Material3.ExtendedFloatingActionButton.Primary"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="55dp"
        android:backgroundTint="@color/matcha"
        android:text="Log In"
        android:textAlignment="center"
        android:textColor="@color/darkgrass"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordEdtTxt"
        app:rippleColor="@color/darkgrass2" />

    <TextView
        android:id="@+id/accountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="You don’t have an account? No problem! \n Become a mebmer of wellness wave!"
        android:textAlignment="center"
        android:textColor="@color/darkgrass"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logInBtn" />

    <Button
        android:id="@+id/signInBtn"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/grass"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountTxt"
        app:layout_constraintVertical_bias="0.0"
        app:rippleColor="@color/matcha" />

</androidx.constraintlayout.widget.ConstraintLayout>