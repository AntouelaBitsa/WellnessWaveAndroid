<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp"
    android:backgroundTint="@color/matcha">

    <LinearLayout
        android:id="@+id/linearLayoutCarouselItem"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/cardItemSpecializationTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Add \n Appointment"
            android:textAlignment="center"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/cardItemImgSpecialization"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="30dp"
            android:src="@drawable/add_appointment_48"
            android:contentDescription="Add new appointment"
            android:layout_gravity="center" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
