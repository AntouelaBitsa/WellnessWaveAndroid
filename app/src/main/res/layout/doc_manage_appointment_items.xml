<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/carouselItemDocAppointments"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="8dp"
    android:backgroundTint="@color/sand"
    android:padding="10dp"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutCarouselItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="@drawable/rectangle_stroke_diagnosis"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/manageCrdItmPatFullNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="Full Name"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.059"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.13" />

        <TextView
            android:id="@+id/manageCrdItmPatCommnts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Comments"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/manageCrdItmPatAmka"
            app:layout_constraintStart_toStartOf="@+id/manageCrdItmPatAmka"
            app:layout_constraintTop_toBottomOf="@+id/manageCrdItmPatAmka" />

        <TextView
            android:id="@+id/manageCrdItmPatAmka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Amka"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.111"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/manageCrdItmPatFullNameTxt"
            app:layout_constraintVertical_bias="0.10" />

        <TextView
            android:id="@+id/manageCrdItmPatAppntDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="01/01/2025"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/manageCrdItmPatFullNameTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.243"
            app:layout_constraintStart_toEndOf="@+id/manageCrdItmPatFullNameTxt" />

        <TextView
            android:id="@+id/manageCrdItmPatAppntTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="09:00"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/manageCrdItmPatAppntDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/manageCrdItmPatAppntDate" />

        <Button
            android:id="@+id/appointCrslCrdItmPatInfolBtn"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:elevation="5dp"
            android:backgroundTint="@color/matcha"
            android:text="Cancel"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/grass"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.874"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/manageCrdItmPatAppntTime"
            app:layout_constraintVertical_bias="0.733"
            app:rippleColor="@color/darkgrass2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>