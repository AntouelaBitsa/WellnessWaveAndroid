<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemPatInfo"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="8dp"
    android:backgroundTint="@color/sand"
    android:padding="10dp"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="@drawable/rectangle_stroke_diagnosis"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/crdItmPatFullNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="Full Name"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.059"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.13" />

        <TextView
            android:id="@+id/crdItmPatAmka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Amka"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.111"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/crdItmPatFullNameTxt"
            app:layout_constraintVertical_bias="0.10" />

        <TextView
            android:id="@+id/crdItmPatAppntDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="01/01/2025"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/crdItmPatFullNameTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.243"
            app:layout_constraintStart_toEndOf="@+id/crdItmPatFullNameTxt" />

        <TextView
            android:id="@+id/crdItmPatAppntTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="09:00"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/crdItmPatAppntDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/crdItmPatAppntDate" />

        <Button
            android:id="@+id/crdItmPatDiagnosisBtn"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/matcha"
            android:elevation="5dp"
            android:text="Diagnosis"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/grass"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/crdItmPatAppntDate"
            app:layout_constraintVertical_bias="1.0"
            app:rippleColor="@color/darkgrass2" />

        <!--set image to this image view-->
        <!--<ImageView
            android:id="@+id/cardItemImgSpecialization"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:contentDescription="Insert Diagnosis"
            android:src="@drawable/diagnosis"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.951"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="66dp" />-->
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>