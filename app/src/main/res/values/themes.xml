<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WellnessWaveAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor" tools:targetApi="1">@android:color/transparent</item>
        <item name="android:navigationBarColor" tools:targetApi="1">@color/darkgrass</item>
        <item name="android:colorBackground" tools:targetApi="1">@color/linen</item>
        <item name="android:fontFamily" tools:targetApi="1">@font/geologica</item>
    </style>

    <style name="Theme.WellnessWaveAndroid.New" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor" tools:targetApi="1">@android:color/transparent</item>
        <item name="android:navigationBarColor" tools:targetApi="1">@android:color/transparent</item>
        <item name="android:colorBackground" tools:targetApi="1">#FFFFFF</item>
        <item name="android:textColor">#140F2D</item>
        <item name="android:fontFamily" tools:targetApi="1">@font/geologica</item>
    </style>


    <style name="Theme.WellnessWaveAndroid" parent="Base.Theme.WellnessWaveAndroid" />
  <!-- Base application theme. -->
    <style name="Base.Base.Theme.WellnessWaveAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <!--DONE: Date Picker-->
    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- just override the colors used in the default style -->
        <item name="colorPrimary">@color/darkgrass</item>
        <item name="colorSurface">@color/linen</item>
    </style>

    <style name="CustomMaterialCalendar" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="android:background">@color/linen</item>
    </style>

    <!--Time Picker-->
    <style name="MaterialTimePickerTheme" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="colorSurfaceContainerHigh">@color/linen</item>
        <item name="colorPrimary">@color/darkgrass</item>
        <item name="colorOnPrimaryContainer">@color/matcha</item>
        <item name="colorOnTertiaryContainer">@color/darkgrass2</item>
        <item name="colorTertiary" >@color/smokedmilky</item>
        <item name="colorSurfaceContainerHighest">@color/matcha</item>
        <item name="colorTertiaryContainer">@color/matcha</item>
        <item name="colorPrimaryContainer">@color/matcha</item>
        <item name="colorOnSurfaceInverse">@color/smokedmilky</item>
    </style>

    <style name="CustomMaterialTimePicker" parent="Widget.MaterialComponents.TimePicker">
        <item name="android:background">@color/linen</item>
    </style>

    <!-- Custom SearchView style -->
    <style name="CustomSearchBarStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@drawable/custom_search_bar</item>
        <item name="android:background">@drawable/custom_search_bar</item>
        <item name="android:textColor">@color/darkgrass</item>
        <item name="android:textColorHint">@color/grass</item>
        <item name="android:elevation">10dp</item>
    </style>

    <!-- Custom style for BottomNavigationView -->
    <style name="CustomBottomNavBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="indicatorColor"> @color/grass</item>
    </style>

    <style name="myOutlineButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/linen</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:strokeColor">#1270B0</item>
        <item name="android:textColor">#140F2D</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:elevation">4dp</item>
        <item name="rippleColor">#F6AE2D</item>
    </style>

</resources>