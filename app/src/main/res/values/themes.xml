    <!--Time Picker-->
    <style name="MaterialTimePickerTheme" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="colorSurfaceContainerHigh">@color/grey</item>
        <item name="colorPrimary">@color/skyblue</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorOnTertiaryContainer">@color/navyBlue</item>
        <item name="colorTertiary" >@color/icy</item>
        <item name="colorSurface">@color/icywhite</item>
        <item name="colorSurfaceContainerHighest">@color/white</item>
        <item name="colorTertiaryContainer">@color/white</item>
        <item name="colorPrimaryContainer">@color/white</item>
        <item name="colorOnSurfaceInverse">@color/icy</item>
    </style>

    <style name="CustomMaterialTimePicker" parent="Widget.MaterialComponents.TimePicker">
        <item name="android:background">@color/linen</item>
    </style>

    <!-- Custom SearchView style -->
    <style name="CustomSearchBarStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@drawable/custom_search_bar</item>
        <item name="android:background">@drawable/custom_search_bar</item>
        <item name="android:textColor">@color/skyblue</item>
        <item name="android:textColorHint">@color/greylight</item>
        <item name="android:elevation">10dp</item>
    </style>

    <!-- Custom style for BottomNavigationView -->
    <style name="CustomBottomNavBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="indicatorColor"> @color/grass</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:strokeColor">@color/navyBlue</item>
        <item name="android:textColor">@color/skyblue</item>
        <item name="android:textSize">13sp</item>
        <item name="android:elevation">10dp</item>
        <item name="rippleColor">@color/yellow</item>
    </style>

    <style name="CustomButtonStyle2" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:strokeColor">@color/navyBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:elevation">10dp</item>
        <item name="rippleColor">@color/yellow</item>
    </style>

    <style name="CustomButtonStyle3" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:strokeColor">@color/navyBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:elevation">10dp</item>
        <item name="rippleColor">@color/yellow</item>
    </style>

    <style name="CustomEditTextStyle" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:backgroundTint">@color/icywhite</item>
        <item name="android:textColor">@color/navyBlue</item>
        <item name="android:textColorHint">@color/skyblue</item>
        <item name="android:textSize">13sp</item>
        <item name="paddingStart">5dp</item>
        <item name="paddingEnd">5dp</item>
        <item name="android:gravity">top</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="CustomEditTextStyleOutlined" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/navyBlue</item>
        <item name="android:textColorHint">@color/greymedium</item>
        <item name="strokeColor">@color/grey</item>
        <item name="android:textSize">13sp</item>
        <item name="android:elevation">10dp</item>
    </style>


    <!--Custom style for calendar view-->
    <style name="CustomCalendarWeekday" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/magenda</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/geologica_cursive_regular</item>
    </style>

    <style name="CustomCalendarDate" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/navyBlue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/geologica_cursive_regular</item>
    </style>

    <style name="CalendarSelectedDayStyle" parent="Widget.MaterialComponents.MaterialCalendar.Day.Selected">
        <item name="android:selectableItemBackground">@color/yellow</item>
    </style>

    <style name="CustomCalendarMaterialBased" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="android:dateTextAppearance">@style/CustomCalendarDate</item>
        <item name="android:weekDayTextAppearance">@style/CustomCalendarWeekday</item>
        <item name="android:selectedDateVerticalBar">@drawable/calendar_view_custom_date_selector</item>
    </style>

    <!--  Second try of calendar view Customization  -->
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/yellow</item>
        <item name="colorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorPrimary">@color/navyBlue</item>
        <item name="android:fontFamily">@font/geologica_cursive_regular</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/navyBlue</item>
        <item name="android:fontFamily">@font/geologica_cursive_regular</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/magenda</item>
        <item name="android:fontFamily">@font/geologica_cursive_regular</item>
    </style>
</resources>